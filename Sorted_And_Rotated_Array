class Solution {
    public boolean check(int[] nums) {
        int cnt =0;
        int i=1;
        int n= nums.length;
        while(i<n){
            if(nums[i]<nums[i-1]){
                cnt++;
                i++;
            }
        }    
            if(nums[n-1]>nums[0]){
                cnt++;
            }
            return cnt<=1;
    }

}
